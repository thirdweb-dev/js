{
  "$schema": "https://biomejs.dev/schemas/1.9.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "useHookAtTopLevel": "error",
        "noNewSymbol": "error",
        "noUnusedImports": "error",
        "noUnusedVariables": "error",
        "useArrayLiterals": "error"
      },
      "a11y": {
        "useSemanticElements": "off"
      },
      "style": {
        "noRestrictedGlobals": {
          "options": { "deniedGlobals": ["Buffer"] },
          "level": "error"
        }
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "overrides": [
    {
      "include": ["apps/dashboard/src/css/swagger-ui.css"],
      "linter": {
        "rules": {
          "suspicious": {
            "noImportantInKeyframe": "off"
          }
        }
      }
    },
    {
      "include": [
        "packages/thirdweb/src/crypto/aes/lib/md5.ts",
        "packages/thirdweb/src/utils/promise/p-limit.ts",
        "packages/thirdweb/src/utils/bytecode/cbor-decode.ts",
        "packages/thirdweb/src/wallets/in-app/native/helpers/wallet/sss.ts",
        "packages/thirdweb/src/**/__generated__/**"
      ],
      "linter": {
        "enabled": false
      }
    }
  ]
}
